<?xml version="1.0" encoding="utf-8"?>
<!-- Large Widget (4x4): Full Info + 5-Day Forecast + Refresh -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Refresh Button (top-right) -->
    <ImageView
        android:id="@+id/widget_refresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_popup_sync"
        android:contentDescription="Refresh"
        android:alpha="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Section: Current Weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Weather Icon"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Location"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#BBFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/widget_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km/h"
                    android:textColor="#AAFFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_high_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H:-- L:--"
                    android:textColor="#AAFFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#33FFFFFF" />

        <!-- 5-Day Forecast Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Dự báo 5 ngày"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Day 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_day1_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_day1_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="--"
                android:textColor="#AAFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/widget_day1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Day 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_day2_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_day2_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="--"
                android:textColor="#AAFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/widget_day2_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Day 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_day3_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_day3_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="--"
                android:textColor="#AAFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/widget_day3_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Day 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_day4_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_day4_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="--"
                android:textColor="#AAFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/widget_day4_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Day 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_day5_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_day5_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="--"
                android:textColor="#AAFFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/widget_day5_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--/--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Updated time -->
        <TextView
            android:id="@+id/widget_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Updated: --:--"
            android:textColor="#77FFFFFF"
            android:textSize="9sp" />

    </LinearLayout>

</RelativeLayout>
