<?xml version="1.0" encoding="utf-8"?>
<!-- Medium Widget (4x2): Temp + Location + High/Low + 3h Forecast + Refresh -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Refresh Button (top-right) -->
    <ImageView
        android:id="@+id/widget_refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_popup_sync"
        android:contentDescription="Refresh"
        android:alpha="0.6" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/widget_refresh"
        android:orientation="vertical">

        <!-- Top Row: Main Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Weather Icon"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Location"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#BBFFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--째"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_high_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H:-- L:--"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#33FFFFFF" />

        <!-- 3-Hour Forecast -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_hour1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/widget_hour1_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--째"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_hour2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1h"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/widget_hour2_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--째"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/widget_hour3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2h"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/widget_hour3_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--째"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Updated time -->
        <TextView
            android:id="@+id/widget_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:text="Updated: --:--"
            android:textColor="#77FFFFFF"
            android:textSize="8sp" />
    </LinearLayout>
</RelativeLayout>
